<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/userSport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_border"
        android:text="@string/my_sport_string"
        android:textColor="@color/red"
        android:textSize="32sp"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toSports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_border"
        android:text="@string/sport_workouts_label"
        android:textColor="@color/red"
        android:textSize="32sp"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/AllExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/workout_border"
        android:text="List of Exercises"
        android:textColor="@color/red"
        android:textSize="32sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createAWorkoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_border"
        android:text="Create a Workout"
        android:textColor="@color/red"
        android:textSize="32sp"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/userWorkoutsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_border"
        android:text="My Workouts"
        android:textColor="@color/red"
        android:textSize="32sp"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inputUserWorkoutDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_border"
        android:text="Input Workout Data"
        android:textColor="@color/red"
        android:textSize="32sp"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/HealthyTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_border"
        android:text="@string/healthy_tips_label"
        android:textColor="@color/red"
        android:textSize="32sp"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/progressButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_border"
        android:text="PROGRESS"
        android:textColor="@color/red"
        android:textSize="32sp"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recommendationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_border"
        android:text="Recommendations"
        android:textColor="@color/red"
        android:textSize="32sp"
        android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>